<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins</item>
    </style>





    <style name="HealthDetailDialogTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="WellnessCard" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">#4444AA</item> <!-- Change for each category dynamically -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>











        <!-- Profile Page EditText style (like email, top text) -->
        <style name="ProfileEditTextStyle" parent="Widget.AppCompat.EditText">
            <item name="android:fontFamily">@font/poppins_regular</item> <!-- Make sure to add poppins_regular.ttf in res/font -->
            <item name="android:textColor">#222222</item>
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:background">@android:color/transparent</item>
        </style>

        <!-- Input style for all other text fields (first name, middle, last, birthdate etc) -->
        <style name="ProfileInputText" parent="Widget.AppCompat.EditText">
            <item name="android:fontFamily">@font/poppins_regular</item>
            <item name="android:textColor">#000000</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:paddingStart">8dp</item>
            <item name="android:paddingEnd">8dp</item>
        </style>















</resources> 
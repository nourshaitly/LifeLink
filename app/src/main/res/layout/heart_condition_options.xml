<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Health Tracker Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/healthTrackerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health Tracker"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- nearby hospitals button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nearbyHospitalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Medical Centers"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/healthTrackerButton" />


    <!-- Blood Pressure Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bloodPressureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Pressure Tracker"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/nearbyHospitalButton"/>

    <!-- Medication Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/medicationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication Reminder"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/bloodPressureButton"/>

    <!-- Exercise Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/exerciseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Guide"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/medicationButton"/>

    <!-- Diet Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dietButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Recommendations"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/exerciseButton"/>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpleLight"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 
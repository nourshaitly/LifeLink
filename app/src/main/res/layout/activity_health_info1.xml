<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome message here"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/birthdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM/DD/YYYY"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:padding="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/femaleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Type:"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <!-- Horizontal LinearLayout for side-by-side spinners -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/bloodGroupSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"/>

            <Spinner
                android:id="@+id/rhFactorSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:minHeight="48dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height:"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to select height"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="false"
            android:height="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to select weight"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="false"
            android:height="48dp"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:id="@+id/chronicConditionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have any of these conditions?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Example checkboxes with icons -->
            <CheckBox
                android:id="@+id/hypertensionCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypertension (🔴 High Blood Pressure)" />

            <CheckBox
                android:id="@+id/hypotensionCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypotension (🔵 Low Blood Pressure)" />

            <CheckBox
                android:id="@+id/diabetesCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes (🍬 Blood Sugar Issues)" />

            <CheckBox
                android:id="@+id/heartDiseaseCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Disease (❤️ Previous Heart Issues)" />

            <CheckBox
                android:id="@+id/asthmaCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asthma (🌬️ Breathing Problems)" />

            <CheckBox
                android:id="@+id/neurologicalDisordersCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neurological Disorders (🧠 Epilepsy, Stroke, etc.)" />

            <CheckBox
                android:id="@+id/otherCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other (➕ Add Your Own Condition)" />

            <!-- Show input field for 'Other' if selected -->
            <EditText
                android:id="@+id/otherConditionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter condition"
                android:visibility="gone"
                android:minLength="5" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

